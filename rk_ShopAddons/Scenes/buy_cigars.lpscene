WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()
    
    If money < -5
        Player(Anxious)::"I am in debt. The store will not sell me any cigars."
    Else
        // Get current cigars strains
        CigStck1 = Player.getActorVar(rk_CigStck1)
        CigStck2 = Player.getActorVar(rk_CigStck2)
        CigStck3 = Player.getActorVar(rk_CigStck3)
        CigStck4 = Player.getActorVar(rk_CigStck4)
        CigStck5 = Player.getActorVar(rk_CigStck5)
        
            CigPrice0 = Random(20, 24)
            CigPrice0C = CigPrice0.convertToLocalCurrency(true)
            CigPrice1 = Random(25, 40)
            CigPrice1C = CigPrice1.convertToLocalCurrency(true)
            CigPrice2 = Random(50, 75)
            CigPrice2C = CigPrice2.convertToLocalCurrency(true)
            CigPrice3 = Random(100, 150)
            CigPrice3C = CigPrice3.convertToLocalCurrency(true)
            CigPrice4 = Random(1000, 2000)
            CigPrice4C = CigPrice4.convertToLocalCurrency(true)
            
            Player::"Which cigar I will buy?"
            Player::"There are many variety of cigars here. Honestly, I will take my time to smell each of them !"
            0:: CigStck1 >= 0:: "1 Davidoff Yamas√° for <CigPrice0C>"
            1:: CigStck2 >= 0:: "1 Romeo y Julieta for <CigPrice1C>"
            2:: CigStck3 >= 0:: "1 Montecristo for <CigPrice2C>"
            3:: CigStck4 >= 0:: "1 King of Denmark Limited Edition for <CigPrice3C>"
            4:: CigStck5 >= 0:: "1 Cohiba for <CigPrice4C>"
            8:: "Buy nothing"
        
            If 0
                Player.setActorVar(rk_CigStck1, 1)
                Player.modifyActorVar(rk_CigStck1, 1)
                money -= Price0
                stock_Davidoff += 1
                                
            Elseif 1
                Player.setActorVar(rk_CigStck2, 1)
                Player.modifyActorVar(rk_CigStck2, 1)
                money -= Price1
                stock_Romeo += 1
                
            Elseif 2
                Player.setActorVar(rk_CigStck3, 1)
                Player.modifyActorVar(rk_CigStck3, 1)
                money -= Price2
                stock_Montecristo += 1
                
            Elseif 3
                Player.setActorVar(rk_CigStck4, 1)
                Player.modifyActorVar(rk_CigStck4, 1)
                money -= Price3
                stock_KDcigars += 1
                
            Elseif 4
                Player.setActorVar(rk_CigStck5, 1)
                Player.modifyActorVar(rk_CigStck5, 1)
                money -= Price4
                stock_Cohiba += 1
                
            Endif
    Endif   
SceneEnd()