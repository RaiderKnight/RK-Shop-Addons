WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()
    
    If stock_seafoodprod < 1 
        Player(Anxious)::"Ok, not enough seafood to make a lunch!"
    Else
        
        // Get current seafood types
        SeaMeal1 = Player.getActorVar(rk_SeaMeal1)
        SeaMeal2 = Player.getActorVar(rk_SeaMeal2)
        SeaMeal3 = Player.getActorVar(rk_SeaMeal3)
        SeaMeal4 = Player.getActorVar(rk_SeaMeal4)
        SeaMeal5 = Player.getActorVar(rk_SeaMeal4)
        
        Player::"Ok, which seafood I'm gonna eat?"
        0:: stock_seafoodprod >= 1:: "1 Oysters dish"
        1:: stock_seafoodprod >= 1:: "1 Shrimp dish"
        2:: stock_seafoodprod >= 1:: "1 Sushi dish"
        3:: stock_seafoodprod >= 1:: "1 Lobster dish"
        4:: stock_seafoodprod >= 1:: "1 Caviar dish"
        8:: "Bah! I'm not hungry !"
        
        If 0
            Player.modifyActorVar(rk_SeaMeal1, -1)
            stock_seafoodprod -= 0.5
            mood += 1
            energy += 3
            fitness += 1
            intelligence += 1
            arousal += 1

        Elseif 1
            Player.modifyActorVar(rk_SeaMeal2, -1)
            stock_seafoodprod -= 0.75
            mood += 2
            energy += 4
            fitness += 2
            intelligence += 2
            arousal += 1.25

        Elseif 2
            Player.modifyActorVar(rk_SeaMeal3, -1)
            stock_seafoodprod -= 1
            mood += 3
            energy += 6
            fitness += 3
            intelligence += 3
            arousal += 1.5

        Elseif 3
            Player.modifyActorVar(rk_SeaMeal4, -1)
            stock_seafoodprod -= 1.5
            mood += 4
            energy += 8
            fitness += 4
            intelligence += 4
            arousal += 2

        Elseif 4
            Player.modifyActorVar(rk_SeaMeal5, -1)
            stock_seafoodprod -= 2
            mood += 5
            energy += 10
            fitness += 5
            intelligence += 5
            arousal += 3
        
        Endif
        
    Endif
    
    passTime(0.25, 0.5)
    
SceneEnd()