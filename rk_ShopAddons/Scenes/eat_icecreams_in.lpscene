WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()
    
    If stock_icecreampop < 1 
        Player(Anxious)::"Ok, not enough ice cream desserts to satisfy my belly! I need to go shopping I guess!"
    Else
        
        // Get current ice cream desserts types
        IceMeal1 = Player.getActorVar(rk_IceMeal1)
        IceMeal2 = Player.getActorVar(rk_IceMeal2)
        IceMeal3 = Player.getActorVar(rk_IceMeal3)
        IceMeal4 = Player.getActorVar(rk_IceMeal4)
        IceMeal5 = Player.getActorVar(rk_IceMeal5)
        
        Player::"Ok, which ice cream dessert I'm gonna eat?"
        0:: stock_icecreampop >= 1:: "1 Popcycle"
        1:: stock_icecreampop >= 1:: "1 Ice cream cup"
        2:: stock_icecreampop >= 1:: "1 Milk Shake"
        3:: stock_icecreampop >= 1:: "1 Frozen Margarita pie"
        4:: stock_icecreampop >= 1:: "1 Ice cream cake"
        8:: "Bah! I'm not hungry !"
        
        If 0
            Player.modifyActorVar(rk_IceMeal1, -1)
            stock_icecreampop -= 1
            mood += 2
            energy += 1

        Elseif 1
            Player.modifyActorVar(rk_IceMeal2, -1)
            stock_icecreampop -= 1
            mood += 3
            energy += 2

        Elseif 2
            Player.modifyActorVar(rk_IceMeal3, -1)
            stock_icecreampop -= 1
            mood += 4
            energy += 3

        Elseif 3
            Player.modifyActorVar(rk_IceMeal4, -1)
            stock_icecreampop -= 1
            mood += 5
            energy += 4

        Elseif 4
            Player.modifyActorVar(rk_IceMeal5, -1)
            stock_icecreampop -= 1
            mood += 6
            energy += 5

        Endif
        
    Endif
    
    passTime(0.25, 0.5)
    
SceneEnd()