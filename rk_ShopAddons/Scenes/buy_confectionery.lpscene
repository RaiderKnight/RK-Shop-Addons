WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()
    
    If money < -1
        Player(Anxious)::"I am in debt. The stores will not sell me anything."
    Else
    
        Player(Curious)::"There is a lot of candies here." 
        
        // Get current candy types
        ConFMeal1 = Player.getActorVar(rk_ConFMeal1)
        ConFMeal1p = 1.convertToLocalCurrency(false)
        ConFMeal2 = Player.getActorVar(rk_ConFMeal2)
        ConFMeal2p = 5.convertToLocalCurrency(false)
        ConFMeal3 = Player.getActorVar(rk_ConFMeal3)
        ConFMeal3p = 6.convertToLocalCurrency(false)
        ConFMeal4 = Player.getActorVar(rk_ConFMeal4)
        ConFMeal4p = 7.convertToLocalCurrency(false)
