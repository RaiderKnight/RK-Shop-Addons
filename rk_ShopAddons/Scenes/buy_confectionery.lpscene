        ConFMeal5p = 8.convertToLocalCurrency(false)
        ConFMeal6 = Player.getActorVar(rk_ConFMeal6)
        ConFMeal6p = 10.convertToLocalCurrency(false)
        ConFMeal7 = Player.getActorVar(rk_ConFMeal7)
        ConFMeal7p = 12.convertToLocalCurrency(false)
        ConFMeal8 = Player.getActorVar(rk_ConFMeal8)
        ConFMeal8p = 15.convertToLocalCurrency(false)
            
        Player(Curious)::"Which type of candy shall I buy?"
        0:: ConFMeal1 >= 0 ::"Cotton Candy for <ConFMeal1p>"
        1:: ConFMeal2 >= 0 ::"Smarties Candy for <ConFMeal2p>"
        2:: ConFMeal3 >= 0 ::"Pop Rocks Candy for <ConFMeal3p>"
        3:: ConFMeal4 >= 0 ::"Jolly Ranchers Candy for <ConFMeal4p>"
        4:: ConFMeal5 >= 0 ::"Starburst Fruit Chews Candy for <ConFMeal5p>"
        5:: ConFMeal6 >= 0 ::"Peanut Butter Cups for <ConFMeal6p>"
        6:: ConFMeal7 >= 0 ::"Licorice Candy for <ConFMeal7p>"
        7:: ConFMeal8 >= 0 ::"Gummi Bears for <ConFMeal8p>"
        99:: "Don't buy anything"
               
        If 0
            Player.setActorVar(rk_ConFMeal1, 1)
            money -= 1
            stock_confectioneryprod += 3
            Player(Excited)::"3 candies added to my pantry!"
                    
        ElseIf 1
            Player.setActorVar(rk_ConFMeal2, 1)
            money -= 5
            stock_confectioneryprod += 4
            Player(Excited)::"4 candies added to my pantry!"
                    
        ElseIf 2
            Player.setActorVar(rk_ConFMeal3, 1)
            money -= 6
            stock_confectioneryprod += 5
            Player(Excited)::"5 candies added to my pantry!"
                    
        ElseIf 3
            Player.setActorVar(rk_ConFMeal4, 1)
            money -= 7
            stock_confectioneryprod += 6
            Player(Excited)::"6 candies added to my pantry!"
        
        ElseIf 4
            Player.setActorVar(rk_ConFMeal5, 1)
            money -= 8
            stock_confectioneryprod += 7
            Player(Excited)::"7 candies added to my pantry!"
            
        ElseIf 5
            Player.setActorVar(rk_ConFMeal6, 1)
            money -= 10
            stock_confectioneryprod += 8
            Player(Excited)::"8 candies added to my pantry!"

        ElseIf 6
            Player.setActorVar(rk_ConFMeal7, 1)
            money -= 12
            stock_confectioneryprod += 9
            Player(Excited)::"9 candies added to my pantry!"

        ElseIf 7
            Player.setActorVar(rk_ConFMeal8, 1)
            money -= 15
