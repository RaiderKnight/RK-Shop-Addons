WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()
    
    If money < -1
        Player(Anxious)::"I am in debt. The stores will not sell me anything."
    Else
    
        Player(Curious)::"There is a lot of seafood dishes here." 
        
        // Get current seafood types
        SeaMeal1 = Player.getActorVar(rk_SeaMeal1)
        SeaMeala = Random(5, 12)
        SeaMeal1p = SeaMeala.convertToLocalCurrency(false)
        SeaMeal2 = Player.getActorVar(rk_SeaMeal2)
        SeaMealb = Random(15, 25)
        SeaMeal2p = SeaMealb.convertToLocalCurrency(false)
        SeaMeal3 = Player.getActorVar(rk_SeaMeal3)
        SeaMealc = Random(26, 35)
        SeaMeal3p = SeaMealc.convertToLocalCurrency(false)
        SeaMeal4 = Player.getActorVar(rk_SeaMeal4)
        SeaMeald = Random(36, 50)
        SeaMeal4p = SeaMeald.convertToLocalCurrency(false)
        SeaMeal5 = Player.getActorVar(rk_SeaMeal5)
        SeaMeale = Random(70, 120)
        SeaMeal5p = SeaMeale.convertToLocalCurrency(false)
            
        Player(Curious)::"Which type of seafood shall I buy?"
        0:: SeaMeal1 >= 0 ::"Oysters for <SeaMeal1p>"
        1:: SeaMeal2 >= 0 ::"Shrimps for <SeaMeal2p>"
        2:: SeaMeal3 >= 0 ::"Sushi dish for <SeaMeal3p>"
        3:: SeaMeal4 >= 0 ::"Lobster for <SeaMeal4p>"
        4:: SeaMeal5 >= 0 ::"Caviar for <SeaMeal5p>"
        99:: "Don't buy anything"
               
        If 0
            Player.setActorVar(rk_SeaMeal1, 1)
            money -= SeaMeal1p
            stock_seafoodprod += 1
            Player(Excited)::"1 seafood added to my refrigerator!"
                    
        ElseIf 1
            Player.setActorVar(rk_SeaMeal2, 1)
            money -= SeaMeal2p
            stock_seafoodprod += 1.5
            Player(Excited)::"1.5 seafood added to my refrigerator!"
                    
        ElseIf 2
            Player.setActorVar(rk_SeaMeal3, 1)
            money -= SeaMeal3p
            stock_seafoodprod += 2
            Player(Excited)::"2 seafood added to my refrigerator!"
                    
        ElseIf 3
            Player.setActorVar(rk_SeaMeal4, 1)
            money -= SeaMeal4p
            stock_seafoodprod += 3
            Player(Excited)::"3 seafood added to my refrigerator!"
        
        ElseIf 4
            Player.setActorVar(rk_SeaMeal5, 1)
            money -= SeaMeal5p
            stock_seafoodprod += 4
            Player(Excited)::"4 seafood added to my refrigerator!"
            
        EndIf
        
    EndIf
    
    SceneEnd()