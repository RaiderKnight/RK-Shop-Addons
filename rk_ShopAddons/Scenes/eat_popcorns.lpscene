WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()
    
    If  money < -1 
        Player(Anxious)::"Ok, no money to eat! I need to find a job I guess... !"
    Else
        
        
        
        // Get current popcorn types
        PopcMeal1 = Player.getActorVar(rk_PopcMeal1)
        PopcMeala = Random(2, 3)
        PopcMeal1p = PopcMeala.convertToLocalCurrency(false)
        PopcMeal2 = Player.getActorVar(rk_PopcMeal2)
        PopcMealb = Random(4, 5)
        PopcMeal2p = PopcMealb.convertToLocalCurrency(false)
        PopcMeal3 = Player.getActorVar(rk_PopcMeal3)
        PopcMealc = Random(6, 8)
        PopcMeal3p = PopcMealc.convertToLocalCurrency(false)
        PopcMeal4 = Player.getActorVar(rk_PopcMeal4)
        PopcMeald = Random(9, 15)
        PopcMeal4p = PopcMeald.convertToLocalCurrency(false)
        
        Player::"Which type of popcorn shall I buy?"
        0:: money >= 0 ::"Plain popcorn for <PopcMeal1p>"
        1:: money >= 0 ::"Butter popcorn for <PopcMeal2p>"
        2:: money >= 0 ::"Popcorn sweet mix for <PopcMeal3p>"
        3:: money >= 0 ::"Healthy popcorn for <PopcMeal4p>"
        8:: "Bah! I'm not hungry !"
        
        If 0
            Player.modifyActorVar(rk_PopcMeal1, -1)
            mood += 0.75
            energy += 1
            fitness -= 0.02
            money -= PopcMeal1
            
        Elseif 1
            Player.modifyActorVar(rk_PopcMeal2, -1)
            mood += 1
            energy += 2
            fitness -= 0.05
            money -= PopcMeal2
        
        Elseif 2
            Player.modifyActorVar(rk_PopcMeal3, -1)
            mood += 2
            energy += 5
            fitness -= 0.07
            money -= PopcMeal3
        
        Elseif 3
            Player.modifyActorVar(rk_PopcMeal4, -1)
            mood += 3
            energy += 5
            fitness += 1
            money -= PopcMeal4
            attractiveness += 1
        
        Endif
        
    Endif
    
    passTime(0.25, 0.5)
    
SceneEnd()