WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()
    
    If  money < -1 
        Player(Anxious)::"Ok, no money to eat! I need to find a job I guess... !"
    Else
        
        // Get current vegan meal types
        BKMeal1 = Player.getActorVar(rk_BKMeal1)
        BKMeal1p = 2.convertToLocalCurrency(false)
        BKMeal2 = Player.getActorVar(rk_BKMeal2)
        BKMeal2p = 3.convertToLocalCurrency(false)
        BKMeal3 = Player.getActorVar(rk_BKMeal3)
        BKMeal3p = 4.convertToLocalCurrency(false)
        BKMeal4 = Player.getActorVar(rk_BKMeal4)
        BKMeal4p = 5.convertToLocalCurrency(false)
        BKMeal5 = Player.getActorVar(rk_BKMeal5)
        BKMeal5p = 3.convertToLocalCurrency(false)
        BKMeal6 = Player.getActorVar(rk_BKMeal6)
        BKMeal6p = 6.convertToLocalCurrency(false)
        BKMeal7 = Player.getActorVar(rk_BKMeal7)
        BKMeal7p = 11.convertToLocalCurrency(false)
        BKMeal8 = Player.getActorVar(rk_BKMeal8)
        BKMeal8p = 26.convertToLocalCurrency(false)
        
        Player::"Which type of bread or pastry shall I buy?"
        0:: BKMeal1 >= 0 ::"1 pita for <BKMeal1p>"
        1:: BKMeal2 >= 0 ::"1 Nutricious bread for <BKMeal2p>"
        2:: BKMeal3 >= 0 ::"1 Whole grain bagel for <BKMeal3p>"
        3:: BKMeal4 >= 0 ::"1 Baltik bread for <BKMeal4p>"
        4:: BKMeal5 >= 0 ::"1 Protein cookie for <BKMeal5p>"
        5:: BKMeal6 >= 0 ::"1 Vdolky donut for <BKMeal6p>"
        6:: BKMeal7 >= 0 ::"1 Homemade apple pie for <BKMeal7p>"
        7:: BKMeal8 >= 0 ::"1 Royal cake for <BKMeal8p>"
        8:: "Bah! I'm not hungry !"
        
        If 0
            Player.modifyActorVar(rk_BKMeal1, -1)
            mood += 0.5
            energy += 1
            fitness += 1
            money -= 2
            
        Elseif 1
            Player.modifyActorVar(rk_BKMeal2, -1)
            mood += 1
            energy += 3
            fitness += 2
            money -= 3
        
        Elseif 2
            Player.modifyActorVar(rk_BKMeal3, -1)
            mood += 1
            energy += 4
            fitness += 3
            money -= 4
        
        Elseif 3
            Player.modifyActorVar(rk_BKMeal4, -1)
            mood += 2
            energy += 5
            fitness += 4
            money -= 5
        
        Elseif 4
            Player.modifyActorVar(rk_BKMeal5, -1)
            mood += 2
            energy += 3
            fitness += 1
            money -= 3
        
        Elseif 5
            Player.modifyActorVar(rk_BKMeal6, -1)
            mood += 3
            energy += 3
            fitness -= 1
            money -= 6
        
        Elseif 6
            Player.modifyActorVar(rk_BKMeal7, -1)
            mood += 4
            energy += 4
            fitness -= 1
            money -= 11
        
        Elseif 7
            Player.modifyActorVar(rk_BKMeal8, -1)
            mood += 6
            energy += 5
            fitness -= 2
            money -= 26
            
        Endif
        
    Endif
    
    passTime(0.25, 0.5)
    
SceneEnd()