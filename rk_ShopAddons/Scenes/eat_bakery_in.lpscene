WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()
    
    If stock_bakeryproduct < 1 
        Player(Anxious)::"Ok, not enough pastry or bread to eat! I need to go shop to the bakery !"
    Else
        
        // Get current bakery types
        BKMeal1 = Player.getActorVar(rk_BKMeal1)
        BKMeal2 = Player.getActorVar(rk_BKMeal2)
        BKMeal3 = Player.getActorVar(rk_BKMeal3)
        BKMeal4 = Player.getActorVar(rk_BKMeal4)
        BKMeal5 = Player.getActorVar(rk_BKMeal5)
        BKMeal6 = Player.getActorVar(rk_BKMeal6)
        BKMeal7 = Player.getActorVar(rk_BKMeal7)
        BKMeal8 = Player.getActorVar(rk_BKMeal8)
        
        Player::"Ok, which pastry or bread I'm gonna eat?"
        0:: stock_bakeryproduct >= 1:: "1 pita"
        1:: stock_bakeryproduct >= 1:: "1 Nutricious bread"
        2:: stock_bakeryproduct >= 1:: "1 Whole grain bagel"
        3:: stock_bakeryproduct >= 1:: "1 Baltik bread"
        4:: stock_bakeryproduct >= 1:: "1 Protein cookie"
        5:: stock_bakeryproduct >= 1:: "1 Vdolky donut"
        6:: stock_bakeryproduct >= 1:: "1 piece Homemade apple pie"
        7:: stock_bakeryproduct >= 1:: "1 piece of Royal cake"
        8:: "Bah! I'm not hungry !"
        
        If 0
            Player.modifyActorVar(rk_BKMeal1, -1)
            stock_bakeryproduct -= 1
            mood += 0.5
            energy += 1
            fitness += 1

        Elseif 1
            Player.modifyActorVar(rk_BKMeal2, -1)
            stock_bakeryproduct -= 1
            mood += 1
            energy += 3
            fitness += 2

        Elseif 2
            Player.modifyActorVar(rk_BKMeal3, -1)
            stock_bakeryproduct -= 1
            mood += 1
            energy += 4
            fitness += 3

        Elseif 3
            Player.modifyActorVar(rk_BKMeal4, -1)
            stock_bakeryproduct -= 1
            mood += 2
            energy += 5
            fitness += 4

        Elseif 4
            Player.modifyActorVar(rk_BKMeal5, -1)
            stock_bakeryproduct -= 1
            mood += 2
            energy += 3
            fitness += 1

        Elseif 5
            Player.modifyActorVar(rk_BKMeal6, -1)
            stock_bakeryproduct -= 1
            mood += 3
            energy += 3
            fitness -= 1

        Elseif 6
            Player.modifyActorVar(rk_BKMeal7, -1)
            stock_bakeryproduct -= 1
            mood += 4
            energy += 4
            fitness -= 1
        
        Elseif 7
            Player.modifyActorVar(rk_BKMeal8, -1)
            stock_bakeryproduct -= 1
            mood += 6
            energy += 5
            fitness -= 2
        
        Endif
        
    Endif
    
    passTime(0.25, 0.5)
    
SceneEnd()