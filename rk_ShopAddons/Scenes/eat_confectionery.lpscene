        6:: stock_confectioneryprod >= 1:: "2 Licorice"
        7:: stock_confectioneryprod >= 1:: "5 Gummi Bears"
        8:: "Bah! I'm not hungry !"
        
        If 0
            Player.modifyActorVar(rk_ConFMeal1, -1)
            stock_confectioneryprod -= 1
