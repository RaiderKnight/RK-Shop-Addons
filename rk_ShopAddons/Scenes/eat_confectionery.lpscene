        Elseif 2
            Player.modifyActorVar(rk_ConFMeal3, -1)
            stock_confectioneryprod -= 1
            mood += 3
            energy += 1
            interpersonal += 0.5

        Elseif 3
            Player.modifyActorVar(rk_ConFMeal4, -1)
            stock_confectioneryprod -= 1
            mood += 3
            energy += 3
            interpersonal += 1

        Elseif 4
            Player.modifyActorVar(rk_ConFMeal5, -1)
            stock_confectioneryprod -= 1
            mood += 3
            energy += 3
            interpersonal += 1

        Elseif 5
            Player.modifyActorVar(rk_ConFMeal6, -1)
            stock_confectioneryprod -= 1
