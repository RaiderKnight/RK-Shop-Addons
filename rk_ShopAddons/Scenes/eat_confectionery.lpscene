            energy += 5
            interpersonal -= 2

        Elseif 6
            Player.modifyActorVar(rk_ConFMeal7, -1)
            stock_confectioneryprod -= 1
            mood += 3
            energy += 2
            interpersonal += 1
        
        Elseif 7
            Player.modifyActorVar(rk_ConFMeal8, -1)
            stock_confectioneryprod -= 1
            mood += 3
            energy += 1
            interpersonal += 1
        
        Endif
        
    Endif
    
    passTime(0.25, 0.5)
    
