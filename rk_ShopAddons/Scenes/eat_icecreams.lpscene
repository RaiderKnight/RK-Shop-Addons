WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()
    
    If  money < -1 
        Player(Anxious)::"Ok, no money to eat! I need to find a job I guess... !"
    Else
        
        // Get current ice cream desserts types
        IceMeal1 = Player.getActorVar(rk_IceMeal1)
        IceMeala = Random(1.5, 3)
        IceMeal1p = IceMeala.convertToLocalCurrency(false)
        IceMeal2 = Player.getActorVar(rk_IceMeal2)
        IceMealb = Random(3.5, 5)
        IceMeal2p = IceMealb.convertToLocalCurrency(false)
        IceMeal3 = Player.getActorVar(rk_IceMeal3)
        IceMealc = Random(5.5, 7)
        IceMeal3p = IceMealc.convertToLocalCurrency(false)
        IceMeal4 = Player.getActorVar(rk_IceMeal4)
        IceMeald = Random(7.5, 9)
        IceMeal4p = IceMeald.convertToLocalCurrency(false)
        IceMeal5 = Player.getActorVar(rk_IceMeal5)
        IceMeale = Random(11, 13)
        IceMeal5p = IceMeale.convertToLocalCurrency(false)


        Player::"Which type of ice cream dessert shall I buy?"
        0:: IceMeal1 >= 0 ::"1 Popcycle for <IceMeal1p>"
        1:: IceMeal2 >= 0 ::"1 Ice cream cup for <IceMeal2p>"
        2:: IceMeal3 >= 0 ::"1 Milk Shake for <IceMeal3p>"
        3:: IceMeal4 >= 0 ::"1 Frozen Margarita pie for <IceMeal4p>"
        4:: IceMeal5 >= 0 ::"1 Ice cream cake for <IceMeal5p>"
        8:: "Bah! I'm not hungry !"
        
        If 0
            Player.modifyActorVar(rk_IceMeal1, -1)
            mood += 2
            energy += 1
            money -= IceMeal1p
            
        Elseif 1
            Player.modifyActorVar(rk_IceMeal2, -1)
            mood += 3
            energy += 2
            money -= IceMeal2p
        
        Elseif 2
            Player.modifyActorVar(rk_IceMeal3, -1)
            mood += 4
            energy += 3
            money -= IceMeal3p
        
        Elseif 3
            Player.modifyActorVar(rk_IceMeal4, -1)
            mood += 5
            energy += 4
            money -= IceMeal4p
        
        Elseif 4
            Player.modifyActorVar(rk_IceMeal5, -1)
            mood += 6
            energy += 5
            money -= IceMeal5p
        
        Endif
        
    Endif
    
    passTime(0.25, 0.5)
    
SceneEnd()